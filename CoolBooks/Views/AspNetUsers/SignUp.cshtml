@model CoolBooks.Models.AspNetUsers
@using CaptchaMvc.HtmlHelpers

@{
    ViewBag.Title = "Sign up";
}

<h2>Sign up</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sign up for a new account</h4>
        <p class="text-danger">
            @ViewBag.ErrMessage
        </p>
    </div>

    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10" style="height:20px"> </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PasswordHash, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Password("Password", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10" style="height:20px"> </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PasswordHash, "Validate Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Password("Password2", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10" style="height:20px"> </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10" style="height:20px"> </div>
    <div class="form-group">

        <div class="col-md-10" style="margin-left:180px">

            @Html.MathCaptcha()

        </div>
    </div>
    <div class="col-md-offset-2 col-md-10" style="height:20px"> </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sign up" class="btn btn-primary" />
        </div>
    </div>
}
